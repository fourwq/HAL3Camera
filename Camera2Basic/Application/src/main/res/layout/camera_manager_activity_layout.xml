<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_manager_getcameraidlist"
        android:id="@+id/camera_manager_getcameraidlist"
        android:layout_alignParentTop="true"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera_manager_registerAvailabilityCallback"
        android:id="@+id/camera_manager_registerAvailabilityCallback"
        android:layout_below="@+id/camera_manager_getcameraidlist"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="registerTorchCallback"
        android:id="@+id/camera_manager_registerTorchCallback"
        android:layout_below="@+id/camera_manager_registerAvailabilityCallback"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button6"
        android:layout_below="@+id/camera_manager_registerTorchCallback"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/camera_manager_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/reset"
        android:textAllCaps="false"
        />
</RelativeLayout>